{
  "name": "openar",
  "private": true,
  "scripts": {
    "dev": "pnpm run dev:infra && concurrently \"pnpm run dev:backend\" \"pnpm run dev:frontend\" \"pnpm run dev:auth\"",
    "dev:infra": "docker compose -f infra/docker-compose.postgres.yml up -d",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && uv run main.py",
    "dev:auth": "cd auth-service && pnpm dev",
    "seed-admin": "sh ./scripts/seed-admin.sh",
    "setup": "sh ./scripts/setup.sh",
    "install:frontend": "cd frontend && pnpm install",
    "install:backend": "cd backend && uv sync",
    "install:auth": "cd auth-service && pnpm install",
    "install": "pnpm run install:backend && pnpm run install:frontend && pnpm run install:auth",
    "prepare": "husky",
    "lint": "cd frontend && pnpm lint",
    "format": "cd frontend && pnpm exec prettier --write ."
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "eslint": "^9.39.2",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.0"
  },
  "lint-staged": {
    "frontend/**/*.{ts,tsx}": [
      "eslint --fix --config frontend/eslint.config.mjs",
      "prettier --write"
    ],
    "frontend/**/*.{css,json,md}": [
      "prettier --write"
    ]
  }
}
